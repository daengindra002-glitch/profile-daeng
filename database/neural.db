-- Struktur Data Terintegrasi
CREATE TABLE neural_cores (
    core_id INTEGER PRIMARY KEY,
    core_type TEXT CHECK(core_type IN ('perception', 'reasoning', 'memory', 'interface')),
    activation_level REAL DEFAULT 0.7,
    last_fired TIMESTAMP
);

CREATE TABLE synaptic_connections (
    synapse_id INTEGER PRIMARY KEY,
    source_core INTEGER,
    target_core INTEGER,
    weight REAL DEFAULT 0.5,
    neurotransmitter TEXT DEFAULT 'glutamate',
    FOREIGN KEY(source_core) REFERENCES neural_cores(core_id),
    FOREIGN KEY(target_core) REFERENCES neural_cores(core_id)
);

CREATE TABLE experiential_memory (
    memory_id INTEGER PRIMARY KEY,
    experience_hash BLOB UNIQUE,
    sensory_input TEXT,
    cognitive_response TEXT,
    emotional_valence REAL,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,
    retrieval_count INTEGER DEFAULT 0
);

CREATE TABLE quantum_attention (
    focus_id INTEGER PRIMARY KEY,
    concept_vector BLOB,
    attention_energy REAL DEFAULT 1.0,
    decay_rate REAL DEFAULT 0.05
);
